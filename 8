inverse_side(side::HorizonSide) = HorizonSide(mod(Int(side)+2,4))
left(side::HorizonSide) = HorizonSide(mod(Int(side)+1,4))

function find_marker!(robot)
    side = Nord
    n = 0 
    flag = true
    while !find_marker!(robot,side,n) 
        if flag
            n = n + 1
        end
        flag  = !flag
        side = left(side)
    end
end

function  find_marker!(robot,side,max_num_steps)
    for _ in 1:max_num_steps
        if ismarker(robot)
            return true
        end            
        move!(robot,side)         
    end
    return false            
end

function move_n!(robot, side::HorizonSide, n)
    for _ in 1:n
        move!(robot,side)
    end    
end
