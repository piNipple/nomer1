using HorizonSideRobots
r = Robot(animate = true)

left(side::HorizonSide)::HorizonSide=HorizonSide(mod(Int(side)+1,4))

function findmark!(r)
    side = Ost
    shag = 1
    while  ! ismarker(r)
        for i in 1:2
            mov!(robot, side, shag)
            side = left(side)
        end
        shag += 1
    end
end

function mov!(robot, side, num)
    for i in 1:num
        if !ismarker(robot)
            move!(robot, side)
        end
    end
end
