using HorizonSideRobots
r = Robot(animate=true)

function spavn!(r,side)
    while ! isborder(r,side)
        move!(r,side)
    end
end

spavn!(r, Sud)
spavn!(r, West)

function perim!(r)
    for side in (Nord, Ost, Sud, West)
        while ! isborder(r,side)
            putmarker!(r)
            move!(r,side)
        end
    end
end

perim!(r)
