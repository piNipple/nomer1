using HorizonSideRobots
r=Robot(animate=true)

inverse(side::HorizonSide)::HorizonSide=HorizonSide(mod(Int(side)+2,4))

function krest!(r)
  for s in [Nord, Ost, Sud, West]
    while ! isborder(r,s)
      move!(r,s)
      putmarker!(r)
    end
    s1=inverse(s)
    while ismarker(r)
      move!(r,s1)
    end
  end
  putmarker!(r)
end
