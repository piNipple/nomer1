inverse_side(side::HorizonSide) = HorizonSide(mod(Int(side)+2,4))
left(side::HorizonSide) = HorizonSide(mod(Int(side)+1,4))

function mt!(r,side_border)
    n = 0
    side = left(side_border)
    while isborder(r,side_border)
        n += 1
        move_n!(r,side,n)
        side = inverse_side(side)
    end
    move!(r,side_border)
    move_n!(r, side, div((n+1),2))

end


function move_n!(r, side::HorizonSide, n)
    for x in 1:n
        move!(r,side)
    end    
end

mt!(r,Nord)
