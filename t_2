function spavn!(r,Sud)
    while ! isborder(r,Sud)
        move!(r,Sud)
    end
    while ! isborder(r,West)
        move!(r,West)
    end
end

function perim!(r)
    spavn!(r,Sud)
    for side in (Nord, Ost, Sud, West)
        while ! isborder(r,side)
            putmarker!(r)
            move!(r,side)
        end
    end
end

perim!(r)
